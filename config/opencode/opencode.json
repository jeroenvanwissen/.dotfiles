{
  "$schema": "https://opencode.ai/config.json",
  "theme": "catppuccin",
  "model": "anthropic/claude-sonnet-4-5",
  "autoupdate": false,
  "formatter": {
    "prettier": {
      "command": ["npx", "prettier", "--write", "$FILE"],
      "extensions": [".js", ".ts", ".jsx", ".tsx", ".json", ".md", ".css", ".html", ".astro"]
    },
    "rustfmt": {
      "command": ["rustfmt", "$FILE"],
      "extensions": [".rs"]
    },
    "swiftformat": {
      "command": ["swiftformat", "$FILE"],
      "extensions": [".swift"]
    }
  },
  "watcher": {
    "ignore": [
      "node_modules/**",
      "dist/**",
      ".git/**",
      "target/**",
      ".build/**",
      "DerivedData/**",
      ".next/**",
      ".turbo/**"
    ]
  },
  "compaction": {
    "auto": true,
    "prune": true
  },
  "tui": {
    "scroll_acceleration": {
      "enabled": true
    },
    "diff_style": "auto"
  }
}
